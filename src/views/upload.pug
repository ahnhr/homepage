extends layouts/main

block content
    .form-container
        form(action=`/about${routes.upload}`, method="post", enctype="multipart/form-data")
            div.fileUpload
                label(for="file") 이미지 파일
                input(type="file", id="file", name="historyImgFile", required=true, accept="image/*")
            input(type="text", placeholder="Date", name="date", required=true)
            input(type="text", placeholder="Title", name="title", required=true)
            textarea(name="description", placeholder="Description", required=true)
            input(type="submit", value="Upload")